pipeline {
    agent {
        docker {
            image 'mcr.microsoft.com/dotnet/core/sdk:3.1.101'
        }
    }
    stages {
        stage('Audit') {
            steps  {
                sh '''
                        git version
                        docker version
                        dotnet --list-sdks
                        dotnet --list-runtimes
                      '''
            }
        }
    }
}
